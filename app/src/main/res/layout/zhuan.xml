<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_30"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zhuan_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_189"
        android:scaleType="fitXY"
        android:src="@mipmap/follow"/>

    <TextView
        android:id="@+id/zhuan_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdsds"
        android:layout_marginLeft="@dimen/dp_35"
        android:textSize="@dimen/sp_20"
        android:layout_below="@id/zhuan_iv"/>

    <TextView
        android:id="@+id/zhuan_tv2"
        android:layout_below="@id/zhuan_iv"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdsds"/>
    <TextView
        android:id="@+id/zhuan_tv3"
        android:layout_below="@id/zhuan_tv1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:text="sdsds"/>



</RelativeLayout>