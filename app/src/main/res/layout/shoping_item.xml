<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_8">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/cbcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cb_iv"
        android:layout_width="@dimen/dp_99"
        android:layout_height="@dimen/dp_86"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/cbcb"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/cb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/cb_iv"
        android:text="名称"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/cb_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toRightOf="@id/cb_iv"
        android:text="紫色" />

    <TextView
        android:id="@+id/cb_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_color"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/cb_iv"
        android:text="$ 99"
        android:textColor="@color/red" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_color"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subarct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/shu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="1"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="+"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>
</RelativeLayout>
</LinearLayout>