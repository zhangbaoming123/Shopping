<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_8">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/item_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="热门活动"
            android:textColor="#0A0505"
            android:textSize="@dimen/sp_25" />

        <View
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/item_hot"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#A29B9B" />

        <TextView
            android:id="@+id/item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view"
            android:layout_marginTop="@dimen/dp_25"
            android:text="玩转十一超快感"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv1"
            android:layout_marginTop="@dimen/dp_7"
            android:text="超低5折价"
            android:textColor="#EA737D" />

        <ImageView
            android:id="@+id/item_iv1"
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_89"
            android:layout_below="@id/item_tv2"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_35"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <View
            android:id="@+id/item_view2"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_176"
            android:layout_below="@id/item_view"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/item_iv1"
            android:background="#A29B9B" />

        <ImageView
            android:id="@+id/item_iv2"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_below="@id/item_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/item_view2"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/item_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="萌动双十季"
            android:layout_toRightOf="@id/item_iv2"
            android:layout_below="@id/item_view"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/item_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="萌动双十季低至"
            android:textColor="#EA737D"
            android:layout_toRightOf="@id/item_iv2"
            android:layout_below="@id/item_tv3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"/>

        <View
            android:id="@+id/item_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_iv2"
            android:layout_toRightOf="@id/item_view2"
            android:background="#A29B9B"
            android:layout_marginTop="@dimen/dp_20"/>

        <TextView
            android:id="@+id/item_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdadadada"
            android:layout_below="@id/item_view3"
            android:layout_toRightOf="@id/item_view2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/item_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdadadada"
            android:textColor="#EA737D"
            android:layout_below="@id/item_tv5"
            android:layout_toRightOf="@id/item_view2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            />
        <ImageView
            android:id="@+id/item_iv3"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@id/item_tv5"
            android:layout_below="@id/item_view3"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
